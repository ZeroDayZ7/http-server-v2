{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/main.go",
      "args": [],
      "env": {
        "ENV": "development",
        "APP_ENV": "dev"
