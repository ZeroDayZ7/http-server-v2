# ===============================
# HTTP-Server Configuration
# ===============================

# Server settings
PORT=8081
ENV=development
APP_VERSION=1.0.0
APP_NAME=http-server
SERVER_HEADER=ZeroDayZ7

# Body & routing
BODY_LIMIT_MB=2
PREFORK=false
CASE_SENSITIVE=true
STRICT_ROUTING=false

# Timeouts (in seconds)
IDLE_TIMEOUT_SEC=30
READ_TIMEOUT_SEC=15
WRITE_TIMEOUT_SEC=15

# Migrations
DB_PATH=mysql://user:password@tcp(127.0.0.1:3306)/name_db?parseTime=true
# MySQL connection string
MYSQL_DSN=user:password@tcp(127.0.0.1:3306)/name_db?charset=utf8mb4&parseTime=True&loc=Local

# MySQL pool settings
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME_MIN=30

# CORS
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_SEC=60

# Graceful shutdown
SHUTDOWN_TIMEOUT_SEC=5
